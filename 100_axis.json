{
  "id": 100,
  "name": "philosophy_axes_v1",
  "version": "1.0.0",
  "language": "zh",
  "orthogonalize_recommended": true,

  "axes": [
    {
      "axis_id": 1,
      "axis_name": "free_will_vs_determinism",
      "description": "Human agency versus causal determinism",

      "A": {
        "label": "determinism",
        "sentences": [
              "人的行為完全受因果條件支配。",
              "每個選擇都能被前因充分解釋。",
              "自由只是對因果鏈無知的結果。",
              "所謂決定，其實只是條件反應。",
              "人無法真正脫離環境與基因影響。",
              "道德責任只是社會建構。",
              "意志本身也是自然過程的一部分。",
              "沒有任何行為是絕對自主的。",
              "如果條件相同，選擇必然相同。",
              "自由感只是心理現象。"
        ]
      },

      "B": {
        "label": "free_will",
        "sentences": [
              "人在多種可能中做出真正選擇。",
              "道德責任預設選擇的自由。",
              "意志不完全受因果決定。",
              "人可以反思並改變自己的動機。",
              "自由意味著能夠選擇不同結果。",
              "即使有條件限制，仍保有選擇空間。",
              "理性使人超越單純反應。",
              "行動包含某種自我主導成分。",
              "自由是倫理判斷的基礎。",
              "人並非純粹的自然機器。"
        ]
      }
    },

    {
      "axis_id": 2,
      "axis_name": "deontology_vs_consequentialism",
      "description": "Duty-based ethics versus outcome-based ethics",

      "A": {
        "label": "deontology",
        "sentences": [
              "某些行為本身就是錯的。",
              "原則不能因結果而被破壞。",
              "誠實是一種義務，而非策略。",
              "道德判斷取決於動機與規則。",
              "人應遵守普遍原則。",
              "手段不可隨意犧牲。",
              "對錯不依賴利益計算。",
              "某些權利不可侵犯。",
              "道德律具有約束力。",
              "結果不改變行為的本質。"
        ]
      },

      "B": {
        "label": "consequentialism",
        "sentences": [
              "行為的對錯取決於結果。",
              "最大幸福是道德標準。",
              "若結果更好，規則可以調整。",
              "道德判斷需要考量後果。",
              "手段在某些情況下可以被正當化。",
              "行為價值來自其影響。",
              "利益總量是衡量標準。",
              "若能減少痛苦，就值得考慮。",
              "原則服務於結果。",
              "行為應以實際效益評估。",
              "德性論 vs 規則中心倫理"
        ]
      }
    },

    {
      "axis_id": 3,
      "axis_name": "virtue_vs_rule",
      "description": "Character-centered ethics versus rule-centered ethics",

      "A": {
        "label": "virtue",
        "sentences": [
              "倫理重在培養品格。",
              "好人自然會做出好選擇。",
              "行為源於性格。",
              "德性需要長期習慣養成。",
              "勇氣與節制是核心德性。",
              "品格比規則更重要。",
              "道德生活是一種實踐。",
              "人應追求完善自我。",
              "美德決定行為品質。",
              "倫理是一種存在方式。"
        ]
      },

      "B": {
        "label": "rule",
        "sentences": [
              "行為應依明確規則判斷。",
              "一致性比品格更可靠。",
              "規則提供客觀標準。",
              "個人德性可能導致偏差。",
              "制度化規則保障公平。",
              "道德需具可普遍化形式。",
              "明確標準優於內在直覺。",
              "行為的可檢驗性更重要。",
              "遵守規範維持秩序。",
              "個人性格不應凌駕原則。"
        ]
      }
    },

    {
      "axis_id": 4,
      "axis_name": "eaning_vs_nihilism",
      "description": "Meaning in life versus nihilism",

      "A": {
        "label": "eaning",
        "sentences": [
              "人生可以具有價值。",
              "意義可以被發現或創造。",
              "某些目標值得追求。",
              "人可以為某種目的而活。",
              "價值不僅是幻覺。",
              "生命可具有方向。",
              "人的行動可以承載意義。",
              "意義來自實踐與承諾。",
              "存在可以超越荒謬。",
              "價值可以被理性辯護。"
        ]
      },

      "B": {
        "label": "nihilism",
        "sentences": [
              "世界沒有內在意義。",
              "意義只是人類投射。",
              "存在本身沒有目的。",
              "價值缺乏客觀根據。",
              "所有意義最終都會消失。",
              "追求意義是一種安慰。",
              "宇宙對人類冷漠。",
              "人生沒有終極目標。",
              "意義只是心理需求。",
              "所謂價值沒有絕對基礎。"
        ]
      }
    },

    {
      "axis_id": 5,
      "axis_name": "rationalism_vs_empiricism",
      "description": "Reason as a source of knowledge versus sensory experience",

      "A": {
        "label": "rationalism",
        "sentences": [
              "某些真理不依賴經驗。",
              "理性可提供確定基礎。",
              "數學真理先於經驗。",
              "思辨能揭示本質。",
              "知識有先驗結構。",
              "理性提供普遍原則。",
              "概念先於感官材料。",
              "經驗需要理性整理。",
              "真理可透過推理達成。",
              "理性具有優先性。"
        ]
      },

      "B": {
        "label": "empiricism",
        "sentences": [
              "知識源自感官經驗。",
              "沒有觀察就沒有內容。",
              "概念來自經驗歸納。",
              "理性不能脫離實證。",
              "真理需要驗證。",
              "經驗修正理論。",
              "觀察是知識基礎。",
              "心智最初如白紙。",
              "推理依賴經驗資料。",
              "經驗界定真理範圍。"
        ]
      }
    },

    {
      "axis_id": 6,
      "axis_name": "moral_objectivism_vs_relativism",
      "description": "Objective moral truths versus culturally relative morality",

      "A": {
        "label": "moral_objectivism",
        "sentences": [
              "某些行為本質上錯誤。",
              "道德標準不隨文化改變。",
              "對錯具有普遍性。",
              "道德判斷可以正誤分明。",
              "正義具有客觀性。",
              "價值不是主觀感受。",
              "道德事實存在。",
              "人權具有普遍基礎。",
              "某些規範不可妥協。",
              "道德可被理性辯護。"
        ]
      },

      "B": {
        "label": "relativism",
        "sentences": [
              "對錯依文化而定。",
              "道德觀隨時代改變。",
              "價值源自社會共識。",
              "沒有絕對標準。",
              "道德判斷取決於背景。",
              "不同文化無法比較優劣。",
              "正義概念隨社會變化。",
              "價值是歷史產物。",
              "道德是協議結果。",
              "對錯依情境調整。"
        ]
      }
    },

    {
      "axis_id": 7,
      "axis_name": "dessentialism_vs_existentialism",
      "description": "Fixed human essence versus self-created existence",

      "A": {
        "label": "dessentialism",
        "sentences": [
              "人有固定本性。",
              "事物具有內在目的。",
              "本質先於行動。",
              "人應實現自身功能。",
              "性格有穩定核心。",
              "人性具有普遍結構。",
              "本質決定發展方向。",
              "目的性內嵌於存在。",
              "事物有其應然狀態。",
              "存在依循既定性質。"
        ]
      },

      "B": {
        "label": "existentialism",
        "sentences": [
              "人先存在後定義自己。",
              "本質由選擇形成。",
              "人沒有預設目的。",
              "行動創造自我。",
              "自由塑造本質。",
              "個體為自身負責。",
              "意義源於決定。",
              "人在世界中自我建構。",
              "沒有固定人性。",
              "自我透過實踐生成。"
        ]
      }

    },

    {
      "axis_id": 8,
      "axis_name": "suffering_value_vs_negative",
      "description": "Suffering as meaningful growth versus purely negative harm",

      "A": {
        "label": "suffering_value",
        "sentences": [
              "苦難能帶來成長。",
              "痛苦促進反思。",
              "困境塑造人格。",
              "挫折帶來理解。",
              "苦難揭示真實。",
              "面對痛苦可深化生命。",
              "艱難經驗具有教育意義。",
              "痛苦能促成轉變。",
              "逆境培養韌性。",
              "苦難具有潛在價值。"
        ]
      },

      "B": {
        "label": "negative",
        "sentences": [
              "苦難本身沒有價值。",
              "痛苦只是應減少的負面狀態。",
              "苦難不值得被讚美。",
              "痛苦沒有內在意義。",
              "艱難經驗並非必然成長。",
              "苦難只是傷害。",
              "痛苦不應被合理化。",
              "逆境不具有道德價值。",
              "苦難不是必要條件。",
              "減少痛苦是目標。"
        ]
      }
    }
  ]
}
